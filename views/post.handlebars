<div class="text-center">
  {{!-- <h2 >COMMENTS ONLY if loged </h2> --}}

  {{!-- <p>Created by {{name}} on {{format_date date_created}}</p> --}}
<div class="card">
      <div class="card-header">
          {{title}}
      </div>
      <div class="card-body">
        <p class="card-title">Created by {{user.name}}</p>
        <p class="card-text">  {{content}} </p>

      </div>
</div>

{{!-- comments --}}
{{#each comments as |comment|}}


    {{!-- <p>Created by {{name}} on {{format_date date_created}}</p> --}}
  <div class="card">
    <div class="card-header">

          <div class="card-body">
            <h5 class="card-title">{{comment.content}}</h5>
            {{!-- <p class="card-text"> {{comment.content}}</p> --}}

          </div>
     
      
     </div>

  </div>
  {{/each}}

          {{#if logged_in}}
       <div class="form-floating">
      <h4>Create a COMMENT:</h4>
           <form class="form new-comment-form">

            <div  hidden class="form-group">
              <label  for="project-name">post id:</label>{{id}}
              <input class="form-input" type="text" id="project-name" name="project-name" data-id="{{id}}"/>
            </div>

       
            <div class="form-group">
              <label for="project-desc">content:</label>
              <textarea
                class="form-control"  id="comment-desc"  name="project-desc"   ></textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary">Create</button>
            </div>
          </form>
      
  </div>
              {{else}}
       <p> login for comment </p>
            {{/if}}



